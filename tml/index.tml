<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Авторизация</title>

    <link rel="stylesheet" href="/static/css/bootstrap.css"/>

</head>
<body>


    <dir class="row" style="margin-top: 25px;">
        <dir class="col-md-6 col-md-offset-3">
            <div class="alert alert-danger" style="display: none" id="error">Неправильная пара логин-пароль</div>
            <form method = "post" id="login">
                <div class="form-group">
                    <label for="exampleInputEmail1">Имя пользователя</label>
                    <input type="text" class="form-control" name="login" placeholder="Login"/>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Пароль</label>
                    <input type="password" class="form-control" name="password" placeholder="Password"/>
                </div>

            </form>

            <div class="form-group">
                <button type="submit" class="btn btn-default" id="buttonId">Войти</button>
                <a href="/registration" class="btn btn-link">Зарегестрироваться</a>
            </div>
        </dir>
    </dir>

    <script src="/static/js/jquery.js"/>
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/bootstrap.js"></script>
    <script>
        $(document).ready(function(){
            $('#buttonId').click(function() {

                $.ajax({
                    url: '/login',
                    type: 'POST',
                    dataType: 'json',
                    data: $("#login").serialize(),
                    success: function (jsonResponce) {
                        if (jsonResponce.error) {

                            location.replace("/time");
                        }
                        else {
                            $('#error').show();
                        }
                    },

                });

            });
        });
    </script>

</body>
</html>
